<div class="showing-employees">

    <div class="content-intro" style="text-align:center;">
        <h1>Your employee info: </h1>
    </div>

    <div class="employee-info-wrapper" style="width: 20%; border: solid 1px black; padding: 2rem;">
                <div><b>Employee first name: </b> <%= @employee.first_name %></div>
                <div><b>Employee last name: </b> <%= @employee.last_name %></div>
                <div><b>Employee's email: </b> <%= @employee.email%></div>
                <div><b>Employee's joining date: </b> <%= @employee.joining_date %></div>
                <div><b>Employee's birthday: </b> <%= @employee.birthday %></div>
                <div><b>Employee's Salary: </b> <%= @employee.salary %></div>
                <div><b>Employee's Total Salary: </b>  <%= @employee.total %>  </div>
                <div><b>Hotel ID: </b>  <%= @employee.hotel_id %>  </div>
                <div><b>Hotel ID: </b>  <%= @employee.hotel_name %>  </div>
                <%= button_to "Delete", employee_path(@employee.id), method: :delete %>

    </div>
    
    <hr>
    <br>
    <br>

    <%= link_to "Back", employees_path %>


    <style>
        .employee-info-wrapper div{ display: flex; justify-content: space-between;}
    </style>
    
</div>