
<div class="new_room_page">
    <div class="intro" style = "text-align: center;">
        <h1>Create a New room</h1>
    </div>
    
    <%= form_with(model: @rooms, local: true) do |form| %>
    <%= form.label "Room number" %>
    <%= form.text_field :room_no %>

  <%= form_with(model: @room, local: true) do |form| %>
  <%= form.label "Room number" %>
  <%= form.text_field :room_number %>

  <br>
  <%= form.label "Floor number" %>
  <%= form.text_field :floor_number %>

  <br>
  <%= form.label "Max capacity" %>
  <%= form.number_field :max_capacity %>

    <br>
    <%= form.label :hotel_id %>
    <%= form.collection_select :hotel_id, Hotel.all, :id, :name, prompt: "Select a hotel" %>
    <br>
    <%= form.label :hotel_name %>
    <%= form.collection_select :hotel_name, Hotel.all, :name, :name %>




  <hr>
  <br>
  <br>

<%= link_to "Back", rooms_path %>

</div>