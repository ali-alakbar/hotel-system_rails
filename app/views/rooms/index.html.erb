<div class="rooms">

  <h1>All rooms</h1>
  <% if @rooms.empty? %>
    <p style="color:red; font-weight:bold;">No rooms found</p>
  <% else %>
    <div  style= "display: flex; flex-wrap: wrap; gap: 2rem; width: 60%; ">
      <% @rooms.each do |item| %>
      <div class="rooms-list" style=" margin:1rem 0; margin: 1rem 0; width: fit-content; border: solid 1px black; padding: 2rem; display: grid; gap: 1rem; " >
            <div>
                Room No: <b> <%= item.room_number%> </b>
                <br>
            </div>
            <div style="display: flex; gap:1rem;" class="links">
                <%= link_to "Show", room_path(item) %>
                <%= button_to "Delete", room_path(item), method: :delete, data: { confirm: "Are you sure?" } %>
            </div>
            <div class="notice" style="position: absolute; left:50%; top:50%; transform: translate(-50%, -50%); color:red; font-weight: bold; font-size: 2rem;"><%= flash[:notice] %></div>            
        </div>
      <% end %>
    </div>
  <% end %>
  
  <%= link_to "Create a New room", new_room_path %>
  <hr>
  <br>
  <%= link_to "Back to Hotel Page", root_path %>
  
</div>
