<div class="showing-guests">

  <div class="content-intro" style="text-align:center;">
    <h1>Your guest info: </h1>
  </div>
  
  <div class="guest-info-wrapper" style="width: 20%; border: solid 1px black; padding: 2rem;">
    <div><b>     Guest Full name (English):               </b>     <%= @guest.full_name_en     %>         </div>
    <div><b>     Guest Full name (Arabic):                </b>     <%= @guest.full_name_ar     %>         </div>
    <div><b>     ID number:                               </b>     <%= @guest.id_card_number   %>         </div>
    <div><b>     Passport number:                         </b>     <%= @guest.passport_number  %>         </div>
    <div><b>     Mobile number:                           </b>     <%= @guest.mobile_number    %>         </div>
    <div><b>     Email:                                   </b>     <%= @guest.email            %>         </div>
    <div><b>     Birthdate:                               </b>     <%= @guest.birthday         %>         </div>
    <%= button_to "Delete", v1_guest_path(@guest.id), method: :delete %>
  </div> <hr><br><br>
  <%= link_to "Back", v1_guests_path %>
  <style>
    .guest-info-wrapper div{ display: flex; justify-content: space-between;}
  </style>
</div>