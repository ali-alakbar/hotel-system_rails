<div class="showing-roles">

  <div class="content-intro" style="text-align:center;">
    <h1>Your role info: </h1>
  </div>
  
  <div class="role-info-wrapper" style="width: 20%; border: solid 1px black; padding: 2rem;">
    <div><b>     Role english name:                 </b>     <%= @role.name_en     %>         </div>
    <div><b>     Role arabic name:                  </b>     <%= @role.name_ar     %>         </div>
    <div><b>     Role's hotel:                      </b>     <%= @role.hotel_id    %>         </div>
    <%= button_to "Delete", v1_role_path(@role.id), method: :delete %>
  </div>
  <hr>
  <br>
  <br>
  <%= link_to "Back", v1_roles_path %>
  <style>
    .role-info-wrapper div{ display: flex; justify-content: space-between;}
  </style>
</div>