<div class="bookings">

  <h1>All bookings</h1>

  <% if @bookings.empty? %>
    <p>No bookings yet</p>
  <% else %>
    <div  style= "
              display: flex;
              flex-wrap: wrap;
              gap: 2rem;
              width: 60%;
            ">

      <% @bookings.each do |item| %>
      <div class="bookings-list" style="
                        margin:1rem 0; 
                        margin: 1rem 0;
                        width: fit-content;
                        border: solid 1px black;
                        padding: 2rem;
                        display: grid;
                        gap: 1rem;
                        "
                        >

            <div>
                <strong>Guest</strong>:<%= item.holder.full_name_en %> <br>
                <strong>Room</strong>: <%= item.room.room_number %> <br>
                <strong>Status</strong>: <%= item.status %>
            </div>


            <div style="display: flex; gap:1rem;" class="links">
                <%= link_to "Show", v1_booking_path(item) %>
                <%= link_to "Update", edit_v1_booking_path(item) %>
                <%= button_to "Delete", v1_booking_path(item), method: :delete %>
            </div>

            
        </div>
      <% end %>
    </div>
  <% end %>
  <%= link_to "Create a New booking", new_v1_booking_path %>
  <hr>
  <br>
  <%= link_to "Back to Hotel Page", v1_hotels_path %>

  
</div>
