<div class="showing-bookings">

  <div class="content-intro" style="text-align:center;">
    <h1>Your booking info: </h1>
  </div>
  
  <div class="booking-info-wrapper" style="width: 20%; border: solid 1px black; padding: 2rem;">
    <div><b>     Room ID:                              </b>     <%= @booking.room_id                %>                                              </div>
    <div><b>     Employee's name:                      </b>     <%= @booking.employee.first_name    %>                                              </div>
    <div><b>     Employee's ID:                        </b>     <%= @booking.employee_id            %>                                              </div>
    <div><b>     Guest name:                           </b>     <%= @booking.holder.full_name_en    %> (<%= @booking.holder.full_name_ar %>)        </div>
    <div><b>     Guest ID:                             </b>     <%= @booking.holder.id_card_number  %>                                              </div>
    <div><b>     Check in date:                        </b>     <%= @booking.check_in_date          %>                                              </div>
    <div><b>     Check out date:                       </b>     <%= @booking.check_out_date         %>                                              </div>
    <%= button_to "Delete", v1_booking_path(@booking.id), method: :delete %>
  </div>
  <hr>
  <br>
  <br>
  <%= link_to "Back", v1_bookings_path %>
  <style>
    .booking-info-wrapper div{ display: flex; justify-content: space-between;}
  </style>
</div>