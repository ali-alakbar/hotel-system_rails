  
<div data-controller="salary" class="new_employee_page">
  <div class="intro" style = "text-align: center;">
      <h1>New employee</h1>
  </div>
  
  <%= form_with(model: @employee, local: true, url: v1_employees_path) do |form| %>
    <%= form.label "Fname" %>
    <%= form.text_field :first_name %>  
    <br>
    <%= form.label "Lname" %>
    <%= form.text_field :last_name %>  
    <br>
    <%= form.label "Email" %>
    <%= form.text_field :email %>  
    <br>
    <%= form.label "Age" %>
    <%= form.number_field :age %>  
    <br>
    <%= form.label "Joinindate" %>
    <%= form.date_field :joining_date %>  
    <br>
    <%= form.label "Birthday" %>
    <%= form.date_field :birthday %>
    <br>
    <%= form.label "Salary" %>
    <%= form.number_field :salary%>  
    <br>
    <%= form.label "Hotel Name" %>
    <%= form.collection_select :hotel_id, Hotel.all, :id, :name, prompt: "Select a hotel" %>
    <br>
    <%= form.label "Status" %>
    <%= form.select :status, Employee.status.options %>
    <br>
    <%= form.label "Role Name" %>
    <%= form.collection_select :role_id, Role.all, :id, :name_en, prompt: "Select a role" %>
    <br>
    <br>
    <br>
    <%= form.submit%>
  <% end %>
  <br>
  <br>
  <%= link_to "Back", v1_employees_path %>
</div>