<div class="employees">

  <h1>All employees</h1>


  <%= search_form_for @q, url: v1_employees_path do |f| %>
    <%= f.label :email_cont, "Employee by email" %>
    <%= f.search_field :email_cont %>
    <%= f.submit "Search" %>
  <% end %>



  <% if @employees.empty? %>
    <p>No employees found</p>
  <% else %>
    <div  style= "
              display: flex;
              flex-wrap: wrap;
              gap: 2rem;
              width: 60%;
            ">

      <% @employees.each do |item| %>
      <div class="employees-list" style="
                        margin:1rem 0; 
                        margin: 1rem 0;
                        width: fit-content;
                        border: solid 1px black;
                        padding: 2rem;
                        display: grid;
                        gap: 1rem;
                        "
                        >

            <div>
                Full Name: <b> <%= item.first_name%> <%= item.last_name%>  </b> 
                <br>
                Email: <b> <%= item.email%>  </b>
                <br>
            </div>


            <div style="display: flex; gap:1rem;" class="links">
                <%= link_to "Show", v1_employee_path(item) %>
                <%= button_to "Delete", v1_employee_path(item), method: :delete %>
            </div>

            
        </div>
      <% end %>
    </div>
  <% end %>
  <%= link_to "Create a New employee", new_v1_employee_path %>
  <hr>
  <br>
  <%= link_to "Back to Hotel Page", v1_hotels_path %>

  
</div>
